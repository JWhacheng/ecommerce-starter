extends ../layout

block content
  section.my-5
    .card.border-0.mx-auto.mt-5(style='max-width: 520px; margin-top: 50px')
      .card-body
        h4.card-title.text-center.mb-4 Sign up
        include ../partials/flash
        form(method="POST")
          .row
            .col-12.col-md.form-group
              label.form-label(for='name') First Name
              input.form-control(type='text', name='name', autofocus)
            .col-12.col-md.form-group
              label.form-label(for='lastname') Last Name
              input.form-control(type='text', name='lastname')
          .form-group
            label.form-label(for="email") Email address
            input.form-control(type="email", name="email")
          .row
            .col-12.col-md.form-group
              label.form-label(for='password') Create password
              input.form-control(type='password', name='password')
            .col-12.col-md.form-group
              label.form-label(for='repassword') Repeat password
              input.form-control(type='password', name='repassword')
          .form-group
            .form-check
              input#privacy.form-check-input(type="checkbox", name="privacy")
              label.form-check-label(for="privacy")
                | I am agree with 
                a(href='#') terms and contitions
          .form-group
            button.btn.btn-block.btn-primary(type='submit') Register
    p.text-center.mt-4
      | Have an account? 
      a(href="/login") Log in