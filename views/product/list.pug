extends ../layout

block content 
  section.bg-light.py-5
    .container.my-4
      h2.title-page #{title}
      nav(aria-label='breadcrumb')
        ol.breadcrumb
          li.breadcrumb-item
            a(href="/") Home
          li.breadcrumb-item.active Products
  section.py-4
    .container
      .row
        aside.col-md-3
          .card
            .filter-group
              .card-header
                a(href='#', data-toggle='collapse', data-target='#collapse_1', aria-expanded='true')
                  i.icon-control.fa.fa-chevron-down
                  h6.title Category
              #collapse_1.filter-content.collapse.show(style='')
                .card-body
                  ul.list-menu
                    li
                      a(href='#') Category 1
                    li
                      a(href='#') Category 2
                    li
                      a(href='#') Category 3
            .filter-group
              .card-header
                a(href='#', data-toggle='collapse', data-target='#collapse_4', aria-expanded='true')
                  i.icon-control.fa.fa-chevron-down
                  h6.title Sizes 
              #collapse_4.filter-content.collapse.show(style='')
                .card-body
                  label.checkbox-btn.mr-2
                    input(type='checkbox')
                    span.btn.btn-light  XS 
                  label.checkbox-btn.mr-2
                    input(type='checkbox')
                    span.btn.btn-light  SM 
                  label.checkbox-btn.mr-2
                    input(type='checkbox')
                    span.btn.btn-light  LG 
                  label.checkbox-btn
                    input(type='checkbox')
                    span.btn.btn-light  XXL
